
<div class="container" style="margin-bottom:30px">
    <script>
    var vcap = @Html.Raw(ViewBag.Json);
        var services = ["filesystem", "harbor-1.0", "memcached-1.4", "mongodb-2.4", "mysql-5.5", "postgresql-9.1", "rabbitmq3-3.1", "mssql2014"];
        $(function () {
            $(".collapsediv").hide();
            $.each(services, function( i, v ) {
                if(vcap[v]){
                    $("#buttons").append("<button id='"+v+"' class='btn btn-success togglebtn' type='button'>"+v+"</button>");
                }
                else{
                    $("#buttons").append("<button id='"+v+"' class='btn btn-default togglebtn' type='button'>"+v+"</button>");
                }
            });

            $('.togglebtn').bind('click', function () {
                $(".collapsediv").hide();
                var target_id = this.id;
                console.log("#" + target_id + "_div");
                $("#" + target_id + "_div").slideDown();

            });
        });
    </script>
    <h2>ALS Services</h2>
    <div id="buttons">

    </div>
    <div class="collapsediv" id="filesystem_div">
        <div class="well">
            0...
        </div>
    </div>
    <div class="collapsediv" id="mongo_div">
        <div class="well">
            1...
        </div>
    </div>

</div>
